<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "my_messaging_store_logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->

      <%= link_to t("about"), about_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t("solution"), solution_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t("features"), features_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "FAQ", faq_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t("login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <div class="navbar-wagon-item">
        <% if request.original_url.include? "fr" %>
          <div class="dropdown">
            <img src="https://goo.gl/WvIRbP" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" style="min-width: 0px;">
              <li><a href="/"><img src="https://goo.gl/JXX6cS" class="avatar dropdown-toggle"></a></li>
            </ul>
          </div>
        <% else %>
          <div class="dropdown">
            <img src="https://goo.gl/JXX6cS" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" style="min-width: 0px;">
              <li><a href="/fr"><img src="https://goo.gl/WvIRbP" class="avatar dropdown-toggle"></a></li>
            </ul>
          </div>
        <% end %>
      </div>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="pages/about"><%= t('about') %></a></li>
        <li><a href="pages/solution"><%= t('solution') %></a></li>
        <li><a href="pages/features"><%= t('features') %></a></li>
<!--         <li><a href="pages/faq">FAQ</a></li> -->
        <li><a href="users/sign_in"><%= t('login') %></a></li>
      </ul>
    </div>
  </div>
</div>

